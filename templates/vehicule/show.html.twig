{% extends 'base.html.twig' %}

{% block title %}Vehicule{% endblock %}

{% block body %}
<a class="btn btn-secondary" href="{{ path('vehicule_index') }}" style="margin-bottom: 1rem;">Retour liste</a>


<table class="table table-dark table-striped table-bordered">
    <thead>
        <tr>
            <th colspan="7"><h1 style="text-align: center;">{{ vehicule.modele }} {{ vehicule.plaque }}</h1></th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ vehicule.id }}</td>
        </tr>
        <tr>
            <th>Plaque</th>
            <td>{{ vehicule.plaque }}</td>
        </tr>
        <tr>
            <th>Kilometrage</th>
            <td>{{ vehicule.kilometrage }}</td>
        </tr>
        <tr>
            <th>Etat</th>
            <td>{{ vehicule.etat }}</td>
        </tr>
    </tbody>
</table>

<a class="btn btn-primary" href="{{ path('vehicule_edit', {'id': vehicule.id}) }}">Modifier</a>

{{ include('vehicule/_delete_form.html.twig') }}
{% endblock %}