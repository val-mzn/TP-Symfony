<script>

    window.addEventListener('mousemove', e => {
        mousePos = { x: e.pageX, y: e.pageY };
        if (mousePos.x < 10) { openNav(); }
        if (mousePos.x > 250) { closeNav(); }
    });

    function openNav() {
        document.getElementById("sidebar").style.transform = "translate(0px, 0)"
    }

    function closeNav() {
        document.getElementById("sidebar").style.transform = "translate(-240px, 0)"
    }
    closeNav();
</script>