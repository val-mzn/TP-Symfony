{% extends 'base.html.twig' %}

{% block title %}Location{% endblock %}

{% block body %}

<a class="btn btn-secondary" href="{{ path('location_index') }}" style="margin-bottom: 1rem;">Retour liste</a>

<table class="table table-dark table-striped table-bordered">
    <thead>
        <tr>
            <th colspan="7">
                <h1 style="text-align: center;">Location ({{ location.vehicule }})</h1>
            </th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <th>Client</th>
            <td> <a href="{{ path('client_show', {'id': location.client.id}) }}">
                    {{ location.client }}
                </a></td>
        </tr>
        <tr>
            <th>Véhicule</th>
            <td><a href="{{ path('vehicule_show', {'id': location.vehicule.id}) }}">
                {{ location.vehicule }}
            </a></td>
        </tr>
        <tr>
            <th>Debut</th>
            <td>{{ location.debut ? location.debut|date('Y-m-d') : '' }}</td>
        </tr>
        <tr>
            <th>Fin</th>
            <td>{{ location.fin ? location.fin|date('Y-m-d') : '' }}</td>
        </tr>

        <tr>
            <th>Duree</th>
            <td>{{ location.duree}} jours</td>
        </tr>

        <tr>
            <th>Prix</th>
            <td>{{ location.prix|number_format(0, ',', ' ') }}€ ({{location.tarif}}/j)</td>
        </tr>
    </tbody>
</table>

<a class="btn btn-primary" href="{{ path('location_edit', {'id': location.id}) }}">Modifier</a>

{{ include('location/_delete_form.html.twig') }}
{% endblock %}