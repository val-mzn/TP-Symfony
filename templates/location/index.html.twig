{% extends 'base.html.twig' %}

{% block title %}Location index{% endblock %}

{% block body %}
<h1 style="text-align: center;">Liste des location</h1>

    <table class="table table-dark table-striped table-bordered">
        <thead>
            <tr>
                <th>Debut</th>
                <th>Fin</th>
                <th>En_cours</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for location in locations %}
            <tr>
                <td>{{ location.debut ? location.debut|date('Y-m-d') : '' }}</td>
                <td>{{ location.fin ? location.fin|date('Y-m-d') : '' }}</td>
                <td>{{ location.enCours ? 'Yes' : 'No' }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('location_show', {'id': location.id}) }}">show</a>
                    <a class="btn btn-primary" href="{{ path('location_edit', {'id': location.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Pas de location trouv√©</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('location_new') }}">Create new</a>
{% endblock %}
