{% extends 'base.html.twig' %}

{% block title %}Client{% endblock %}

{% block body %}

<a class="btn btn-secondary" href="{{ path('client_index') }}" style="margin-bottom: 1rem;">Retour liste</a>

<table class="table table-dark table-striped table-bordered">
    <thead>
        <tr>
            <th colspan="7"><h1 style="text-align: center;">{{client.nom}} {{client.prenom}}</h1></th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ client.id }}</td>
        </tr>
        <tr>
            <th>Nom</th>
            <td>{{ client.nom }}</td>
        </tr>
        <tr>
            <th>Prenom</th>
            <td>{{ client.prenom }}</td>
        </tr>
        <tr>
            <th>Telephone</th>
            <td>{{ client.telephone }}</td>
        </tr>
        <tr>
            <th>Adresse</th>
            <td>{{ client.adresse }}</td>
        </tr>
        <tr>
            <th>Ville</th>
            <td>{{ client.ville }}</td>
        </tr>
        <tr>
            <th>Cp</th>
            <td>{{ client.cp }}</td>
        </tr>
    </tbody>
</table>

<a class="btn btn-primary" href="{{ path('client_edit', {'id': client.id}) }}">Modifier</a>

{{ include('client/_delete_form.html.twig') }}
{% endblock %}